{% extends 'AppBundle::base.html.twig' %}

{% block title %}Category Detail{% endblock %}

{% block body %}

  <section class="jumbotron text-center">
    <div class="container">
      {% if category %}
        <h2 class="jumbotron-heading">{{ category.getTitle() }}</h2>
        <p class="lead text-muted">{{ category.getBody() }}</p>
      {% else %}
        <h1 class="jumbotron-heading">Category data not found</h1>
      {% endif %}
    </div>
  </section>


  <div class="album text-muted">
    <div class="container">
      {% if category %}
        <div class="row">
          {% for key, value in category.getBlogPosts() %}
            <div class="card">
              <h2>{{ value.getTitle() }}</h2>
              <img src="{{ asset('/uploads/images/') }}{{ value.getImage() }}" alt="Post Image">
              <p class="card-text">{{ value.getBody() | truncate(100, true) }}</p>
              <a href="{{ path('post_detail', {'category': category.getSlug() ,'slug': value.getSlug()}) }}">Read more...</a>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
